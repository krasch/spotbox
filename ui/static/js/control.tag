<control>
   <form onsubmit="{ player.play }" style="display:inline">
     <input type="submit" value="play"">
   </form>
   <form onsubmit="{ player.pause }" style="display:inline">
     <input type="submit" value="pause">
   </form>
   <form onsubmit="{ player.next }" style="display:inline">
     <input type="submit" value="next">
   </form>
   <form onsubmit="{ player.clear }" style="display:inline">
     <input type="submit" value="clear">
   </form>
</control>